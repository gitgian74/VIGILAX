{
  "buildCommand": "cd frontend && npm install && npm run build && cp -r dist/* ../ && cd ..",
  "outputDirectory": ".",
  "framework": null,
  "functions": {
    "api/index.py": {
      "runtime": "@vercel/python@3.0.0"
    },
    "api/mcp.py": {
      "runtime": "@vercel/python@3.0.0"
    }
  },
  "rewrites": [
    {
      "source": "/api/mcp",
      "destination": "/api/mcp.py"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11"
  }
}